<Page x:Class="Order66.LoginUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Order66"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="400"
      Title="LoginUser">

    <Grid>
        <StackPanel>
            <Label x:Name="loginNadpis" Content="Přihlášení" HorizontalContentAlignment="Center" FontSize="30"></Label>
            <Label Width="100" HorizontalContentAlignment="Center">Login</Label>
            <TextBox x:Name="loginLogin" Width="100"></TextBox>
            <Label Width="100" HorizontalContentAlignment="Center">Heslo</Label>
            <TextBox x:Name="loginPassword" Width="100"></TextBox>
            <Button x:Name="logining" Content="Přihlásit" FontSize="15" Margin="0,10,0,0" Click="logining_Click"/>
        </StackPanel>
    </Grid>
</Page>
